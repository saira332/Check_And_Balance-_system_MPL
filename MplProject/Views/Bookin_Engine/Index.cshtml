@model MplProject.Models.BookingEngineDTO

@{
    Layout = "~/Views/Shared/_DashboardPartialView.cshtml";
}
}

<!DOCTYPE html>

<html>
<body>
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Booking_Engine</b></h2>
                    </div>
                    <div class="col-sm-6">
                        @*@Html.ActionLink("Add Customer","AddCustomer","Customer", new {@class= "btn btn-success" })*@
                        <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add Latest Attendence</span></a>
                        <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Booking_id</th>
                        <th>Cus_id</th>
                        <th>Pro_id</th>
                        @*<th>Source</th>
                        <th>Paid_price</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.booking_engineList)
                    {
                        <tr>
                            <td>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                    <label for="checkbox1"></label>
                                </span>
                            </td>
                            <td>@a.booking_id</td>
                            <td>@a.cus_id</td>
                            <td>@a.pro_id</td>
                            @*<td>@a.source</td>
                            <td>@a.paid_price</td>*@
                            @*<td><img src="~/images/@a.path" /></td>*@
                            <td>
                                <a href="#editEmployeeModal" class="edit" onclick="edit({'id':'@a.booking_id','cus_id':'@a.cus_id', 'pro_id' : '@a.pro_id'})"ce data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">*&#xE254;</i></a>
                                <a href="#deleteEmployeeModal" id="delete" class="delete" onclick="del(@a.booking_id)" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Add Modal HTML -->
    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("AddBooking_Engine", "Booking_Engine", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    <div class="modal-header">
                        <h4 class="modal-title">Booking_engine</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" name="file" />
                        </div>
                        <div class="form-group">
                            <label>booking_id</label>
                            @Html.TextBoxFor(model => model.booking_engineData.booking_id, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>cus_id</label>
                            @Html.TextBoxFor(model => model.booking_engineData.cus_id, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>pro_id</label>
                            @Html.TextBoxFor(model => model.booking_engineData.pro_id, new { @class = "form-control" })
                        </div>
                        @*<div class="form-group">
                            <label>Source</label>
                            @Html.TextBoxFor(model => model.paymentData.source, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Paid_price</label>
                            @Html.TextBoxFor(model => model.paymentData.paid_price, new { @class = "form-control" })
                        </div>*@
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Add">
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Edit Modal HTML -->
    <div id="editEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("EditBooking_Engine", "Booking_Engine", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    @Html.HttpMethodOverride(HttpVerbs.Put)
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Product</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" name="file" id="cimage" />
                        </div>
                        <input name="id" id="id_ed" class="form-control" />
                        <div class="form-group">
                            <label>Booking_Engine</label>
                            @Html.TextBoxFor(model => model.booking_engineData.booking_id, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>cus_id</label>
                            @Html.TextBoxFor(model => model.booking_engineData.cus_id, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>pro_id</label>
                            @Html.TextBoxFor(model => model.booking_engineData.pro_id, new { @class = "form-control" })
                        </div>
                        @*<div class="form-group">
                            <label>Source</label>
                            @Html.TextBoxFor(model => model.paymentData.source, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Paid_price</label>
                            @Html.TextBoxFor(model => model.paymentData.paid_price, new { @class = "form-control" })
                        </div>*@
                        <img id="cimage" />
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-info" value="Save">
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Delete Modal HTML -->
    <div id="deleteEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("DeleteBooking_Engine", "Booking_Engine", FormMethod.Post))
            {
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Bookings</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete these Bookings?</p>
                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                    </div>

                    <input name="id" id="id_del" class="form-control" />
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-danger" value="Delete">
                    </div>
                }
            </div>
        </div>
    </div>





    <script>
            function del(a)
            {
                document.getElementById("id_del").value = a;

            }
            function edit(data)
            {

                document.getElementById("booking_id_ed").value = data.booking_id;
                document.getElementById("cus_id_ed").value = data.cus_id;
                document.getElementById("pro_id_ed").value = data.pro_id;
                //document.getElementById("Source_ed").value = data.source;
                //document.getElementById("Paid_price_ed").value = data.paid_price;

                img = "~/images/" + data.image;
                document.getElementById("cimage").src = img;


            }
    </script>
</body>
</html>


