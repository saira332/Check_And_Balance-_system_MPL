@model MplProject.Models.employeeDTO

@{
    Layout = "~/Views/Shared/_DashboardPartialView.cshtml";
}
}

<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Employee</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Product</span></a>
                        <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <td>Contact_No</td>
                        <th>CNIC</th>
                        <th>Gender</th>
                        <th>Salary</th>
                        <td>Task</td>
                        <td>OverTime</td>
                        <td>Insurance</td>
                        <th>StartDate</th>
                        <th>TerminatedDate</th>
                        <th>Bonous</th>
                        <th>path</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.employeeList)
                    {
                        <tr>
                            <td>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                    <label for="checkbox1"></label>
                                </span>
                            </td>
                            <td>@a.id</td>
                            <td>@a.name</td>
                            <td>@a.email</td>
                            <td>@a.address</td>
                            <td>@a.contact_no</td>
                            <td>@a.CNIC</td>
                            <td>@a.gender</td>
                            <td>@a.salary</td>
                            <td>@a.task</td>
                            <td>@a.overtime</td>
                            <td>@a.insurance</td>
                            <td>@a.start_date</td>
                            <td>@a.terminated_date</td>
                            <td>@a.bonous</td>
                            <td><img src="~/images/@a.path" /></td>
                            <td>
                                <a href="#editEmployeeModal" class="edit" onclick="edit({'id':'@a.id','name':'@a.name', 'email' : '@a.email' , 'address' : '@a.address', 'contact_no' : '@a.contact_no', 'CNIC' : '@a.CNIC ','gender' : '@a.gender', 'salary' : '@a.salary', 'overtime' : '@a.overtime', 'insurance' : '@a.insurance', 'startdate' : '@a.start_date', 'terminateddate' : '@a.terminated_date', 'bonous' : '@a.bonous','image' : '@a.path'})" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">*&#xE254;</i></a>
                                <a href="#deleteEmployeeModal" id="delete" class="delete" onclick="del(@a.id)" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Add Modal HTML -->
    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("Addemplyee", "emplyee", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    <div class="modal-header">
                        <h4 class="modal-title">Add Employee</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" name="file" />
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(model => model.employeeData.name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.employeeData.email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(model => model.employeeData.address, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Contact_No</label>
                            @Html.TextBoxFor(model => model.employeeData.contact_no, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>CNIC</label>
                            @Html.TextBoxFor(model => model.employeeData.CNIC, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            @Html.TextBoxFor(model => model.employeeData.gender, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Salary</label>
                            @Html.TextBoxFor(model => model.employeeData.salary, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Task</label>
                            @Html.TextBoxFor(model => model.employeeData.task, new { @class = "form-control" })
                         </div>
                        <div class="form-group">
                            <label>Insurance</label>
                            @Html.TextBoxFor(model => model.employeeData.insurance, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>OverTime</label>
                            @Html.TextBoxFor(model => model.employeeData.overtime, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Start_Date</label>
                            @Html.TextBoxFor(model => model.employeeData.start_date, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Terminated_Date</label>
                            @Html.TextBoxFor(model => model.employeeData.terminated_date, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Bonous</label>
                            @Html.TextBoxFor(model => model.employeeData.bonous, new { @class = "form-control" })
                        </div>
                    </div>
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                        <input type="submit" class="btn btn-success" value="Add">
                                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Edit Modal HTML -->
    <div id="editEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("Editemplyee", "emplyee", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    @Html.HttpMethodOverride(HttpVerbs.Put)
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Product</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" name="file" id="cimage" />
                        </div>
                        <input name="id" id="id_ed" class="form-control" />
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(model => model.employeeData.name, new { @class = "form-control", id = "name_ed" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.employeeData.email, new { @class = "form-control", id = "price_ed" })
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(model => model.employeeData.address, new { @class = "form-control", id = "quantity_ed" })
                        </div>
                        <div class="form-group">
                            <label>CNIC</label>
                            @Html.TextBoxFor(model => model.employeeData.CNIC, new { @class = "form-control", id = "quality_ed" })
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            @Html.TextBoxFor(model => model.employeeData.gender, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>Salary</label>
                            @Html.TextBoxFor(model => model.employeeData.salary, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>Task</label>
                            @Html.TextBoxFor(model => model.employeeData.task, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>OverTime</label>
                            @Html.TextBoxFor(model => model.employeeData.overtime, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>Isurance</label>
                            @Html.TextBoxFor(model => model.employeeData.insurance, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>Start_Date</label>
                            @Html.TextBoxFor(model => model.employeeData.start_date, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>Terminated_Date</label>
                            @Html.TextBoxFor(model => model.employeeData.terminated_date, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <div class="form-group">
                            <label>Bonous</label>
                            @Html.TextBoxFor(model => model.employeeData.bonous, new { @class = "form-control", id = "desc_ed" })
                        </div>
                        <img id="cimage" />
                    </div>
                              <div class="modal-footer">
                                  <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                  <input type="submit" class="btn btn-info" value="Save">
                              </div>
                }
            </div>
        </div>
    </div>
    <!-- Delete Modal HTML -->
    <div id="deleteEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("Deleteemplyee", "emplyee", FormMethod.Post))
            {
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Product</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete these Records?</p>
                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                    </div>

                                    <input name="id" id="id_del" class="form-control" />
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                        <input type="submit" class="btn btn-danger" value="Delete">
                                    </div>
                }
            </div>
        </div>
    </div>

