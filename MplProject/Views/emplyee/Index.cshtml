    //}
            function del(a)
            {
                document.getElementById("id_del").value = a;

            }
            function edit(data)
            {

                document.getElementById("id_ed").value = data.id;
                document.getElementById("name_ed").value = data.name;
                document.getElementById("email_ed").value = data.email;
                document.getElementById("address_ed").value = data.address;
                document.getElementById("contact_no_ed").value = data.contact_no;
                document.getElementById("CNIC_ed").value = data.CNIC;
                document.getElementById("gender_ed").value = data.gender;
                document.getElementById("salary_ed").value = data.salary;
                document.getElementById("task_ed").value = data.task;
                document.getElementById("overtime_ed").value = data.overtime;
                document.getElementById("insurance_ed").value = data.insurance;
                document.getElementById("start_date_ed").value = data.start_date;
                document.getElementById("terminated_date_ed").value = data.terminated_date;
                document.getElementById("bonous_ed").value = data.bonous;

                img = "~/images/" + data.image;
                document.getElementById("cimage").src = img;


            }
    </script>
</body>
</html>
