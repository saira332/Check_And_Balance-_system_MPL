@model MplProject.Models.signup

@{
    ViewBag.Title = "SecurityQuestion";
}

<section class="post-wrapper-top">
    <div class="container">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <ul class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li>Forgot Password</li>
            </ul>
            <h2>Forgot Password</h2>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <!-- search -->
            <div class="search-bar">
                <form action="" method="get">
                    <fieldset>
                        <input type="image" src="img/pixel.gif" class="searchsubmit" alt="" />
                        <input type="text" class="search_text showtextback" name="s" id="s" value="Search..." />
                    </fieldset>
                </form>
            </div>
            <!-- / end div .search-bar -->
        </div>
    </div>
</section>
<!-- end post-wrapper-top -->

<section class="section1">
    <div class="container clearfix">
        <div class="content col-lg-12 col-md-12 col-sm-12 clearfix">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h4 class="title">
                    <span>Welcome Back!</span>
                </h4>
                <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry"s standard dummy text ever since the 1500s.</p>
                <p>It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged.</p>
                <p class="withpadding">Still not registered? <a href="~/Views/signup/Index.cshtml">Click Here</a> to register now.</p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h4 class="title">
                    <span>Forgot Password</span>
                </h4>
                @*<form id="loginform" method="post" name="loginform" action="">*@
                @using (Html.BeginForm("ResetPassword", "ForgotPassword", FormMethod.Get))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <label>Please answer thw question that you8 added to your account while creating.</label>
                            <select name="question" , class="form-control">
                                <option>Select</option>
                                <option>What's your childhood friend's name?</option>
                                <option>What is your first hometown?</option>
                            </select>
                        </div>
                        <br />
                        <div class="input-group">
                            <label>Answer</label>
                            <input type="text" name="answer" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button"> Next</button>

                    </div>
                }
                @*</form>*@
            </div>
            <!-- end login -->
        </div>
        <!-- end content -->
    </div>
    <!-- end container -->
</section>
<!-- end section -->


