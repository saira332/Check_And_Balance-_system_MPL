    Layout = "~/Views/Shared/_DashboardPartialView.cshtml";
}

<div class="row">
    Number of users online <strong id="counter"></strong>
    <script src=""></script>
    <script src="@Url.Content("~/scripts/jquery.signalR-2.4.1.min.js")"></script>
    <script src="@Url.Content("~/scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>
    <script>
        $(function () {
            var counterHub = $.connection.counterHub;
            $.connection.hub.start().done(function () {

            });
            counterHub.client.UpdateCounter = function (count) {
                $("#counter").text(count);
            }
        });
    </script>
