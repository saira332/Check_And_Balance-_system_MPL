@model MplProject.Models.task

@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_DashboardPartialView.cshtml";
}
@using (@Html.BeginForm("Tasks", "Dashboard", FormMethod.Post))
{
    <div class="form-group">
        <label>Task</label>
        @Html.DropDownList("employees", new SelectList(ViewBag.employees, "emp_id", "emp_id"), new { @class = "form-control" });
        </div>
        <div class="form-group">
            <label>Task</label>
            @Html.TextBoxFor(model => model.tassk, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>status</label>
            @Html.TextBoxFor(model => model.status, new { @class = "form-control" })
        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
            <input type="submit" class="btn btn-info" value="Save">
        </div>
        }
        }
<div class="table-title">
    <div class="row">
        <div class="col-sm-6">
            <h2>Manage <b>Tasks</b></h2>
        </div>
        <div class="col-sm-6">
            @*@Html.ActionLink("Add Customer","AddCustomer","Customer", new {@class= "btn btn-success" })*@
            <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Task</span></a>
            <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
        </div>
    </div>
</div>
        <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <span class="custom-checkbox">
                    <input type="checkbox" id="selectAll">
                    <label for="selectAll"></label>
                </span>
            </th>
            <th>Id</th>
            <th>Employee Id</th>
            <th>Task</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
                @foreach (MplProject.Models.task sc in ViewBag.employeeetask)
                {
                    <tr>
                        <td>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                <label for="checkbox1"></label>
                            </span>
                        </td>
                        <td>@sc.id</td>
                        <td>@sc.emp_id</td>
                        <td>@sc.tassk</td>
                        <td>@sc.status</td>
                   
            </tr>
        }

    </tbody>
</table>

      


